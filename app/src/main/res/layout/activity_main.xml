<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingConstraints"
    android:layout_gravity="center"
    android:background="@android:color/darker_gray"
    >



    <com.xingzhe.test.DrawProgressCircleView
        android:id="@+id/drawProgressCircleView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:imageWidth="40"
        app:imageHeight="40"
        app:image="@drawable/ic_cs_chat_order"

        />

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:background="@color/colorAccent"

        />

    <TextView
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新开始"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@+id/restart"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/countinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="继续"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@+id/stop"
        android:layout_marginLeft="20dp"
        />



</android.support.constraint.ConstraintLayout>